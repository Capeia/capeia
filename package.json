{
  "name": "Capeia",
  "description": "A New Way to Interact with Science.",
  "version": "0.0.0",
  "license": "MIT",
  "homepage": "http://www.capeia.com",
  "main": "dist/server.js",
  "scripts": {
    "start": "node ./dist/server.js",
    "forever": "forever --minUptime 1000 --spinSleepTime 1000 -c \"node\" ./dist/server.js",
    "clean": "rimraf dist/*.* && rimraf dist/static/*.*",
    "build": "yarn run clean && concurrently --names \"CLIENT-BUILD,SERVER-BUILD\" \"yarn run build-client\" \"yarn run build-server\"",
    "build-client": "webpack --display-error-details --config webpack/webpack.client.js",
    "build-server": "webpack --display-error-details --config webpack/webpack.server.js",
    "watch": "yarn run clean && concurrently --names \"CLIENT-BUILD,SERVER-BUILD,SERVER\" --kill-others \"yarn run watch-client-build\" \"yarn run watch-server-build\" \"yarn run watch-server-start\"",
    "watch-client-build": "webpack-dev-server --config webpack/webpack.client-watch.js",
    "watch-server-build": "webpack --watch --display-error-details --config webpack/webpack.server-watch.js",
    "watch-server-start": "just-wait --timeout 60 --pattern \"dist/*.js\" && yarn run forever",
    "update-schema": "NODE_ENV=test NODE_PATH=./src:./static babel-node ./scripts/updateSchema.js",
    "relay": "relay-compiler --src ./src --schema ./src/server/data/schema.graphql",
    "flow": "sh -c 'flow $*; test $? -eq 0 -o $? -eq 2' --",
    "jest": "sh -c 'BABEL_ENV=test NODE_PATH=./src:./static jest $*' --",
    "lint": "sh -c 'eslint . $* || exit 0' --",
    "test": "yarn run lint && yarn run flow && yarn run jest"
  },
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "babel-runtime": "^6.23.0",
    "classnames": "^2.2.5",
    "color-scheme": "0.0.5",
    "dataloader": "^1.3.0",
    "draft-js": "^0.10.1",
    "easy-rbac": "^2.1.2",
    "emoji-flags": "^1.2.0",
    "farce": "^0.2.1",
    "fbjs": "^0.8.12",
    "form-data": "^2.2.0",
    "found": "^0.3.3",
    "found-relay": "next",
    "found-scroll": "^0.1.2",
    "graphql": "^0.10.3",
    "graphql-relay": "^0.5.2",
    "immutable": "https://registry.npmjs.org/immutable/-/immutable-3.8.1.tgz",
    "invariant": "^2.2.2",
    "isomorphic-fetch": "^2.2.1",
    "isomorphic-style-loader": "^2.0.0",
