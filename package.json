    "koa-graphql": "^0.7.0",
    "koa-jwt": "^3.2.2",
    "koa-mount": "^3.0.0",
    "koa-multer": "^1.0.1",
    "moment": "^2.18.1",
    "nodemailer": "^2.6.4",
    "nodemailer-ses-transport": "^1.5.0",
    "prop-types": "^15.5.10",
    "qs": "^6.4.0",
    "raven": "^2.1.0",
    "react": "^15.6.1",
    "react-bootstrap": "^0.31.0",
    "react-dom": "^15.6.1",
