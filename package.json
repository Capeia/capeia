  "engines": {
    "node": ">=4.x"
  },
  "jest": {
    "rootDir": "",
    "transform": {
      ".*": "<rootDir>/scripts/jest-preprocessor.js"
    },
    "setupTestFrameworkScriptFile": "<rootDir>/scripts/jest-setupTestFramework.js",
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "roots": [
      "<rootDir>/__mocks__/",
      "<rootDir>/src/"
    ],
    "testResultsProcessor": "./node_modules/jest-junit",
    "globals": {
      "__DEV__": false
    }
  },
  "jest-junit": {
    "suiteName": "Frontend Unit Tests",
    "output": "./junit-report.xml"
  }
}
